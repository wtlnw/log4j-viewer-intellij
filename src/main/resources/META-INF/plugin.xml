<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.wtlnw.log4j.viewer</id>
    <name>Log4j Viewer</name>
    <vendor>wtlnw</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.LogEventBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="org.wtlnw.intellij.log4j.viewer.settings.LogEventSettingsService"
        />
        <applicationConfigurable
                parentId="tools"
                instance="org.wtlnw.intellij.log4j.viewer.settings.LogEventConfigurable"
                id="org.wtlnw.intellij.log4j.viewer.settings.LogEventConfigurable"
                bundle="messages.LogEventBundle"
                key="org.wtlnw.intellij.log4j.viewer.settings.LogEventConfigurable.TITLE"
        />
        <toolWindow id="org.wtlnw.intellij.log4j.viewer"
                    factoryClass="org.wtlnw.intellij.log4j.viewer.ui.LogEventToolWindowFactory"
                    anchor="bottom"
                    icon="/META-INF/pluginIcon.svg"
        />
    </extensions>
</idea-plugin>